@model TFMGoSki.ViewModels.ReservationTimeRangeMaterialViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Reservation Time Range Material</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label class="control-label">Material</label>
                <input class="form-control" value="@Model.MaterialName" readonly />
                <input type="hidden" asp-for="MaterialId" />
            </div>
            <div class="form-group">
                <label asp-for="StartDateOnly" class="control-label"></label>
                <input asp-for="StartDateOnly" class="form-control" />
                <span asp-validation-for="StartDateOnly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDateOnly" class="control-label"></label>
                <input asp-for="EndDateOnly" class="form-control" />
                <span asp-validation-for="EndDateOnly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTimeOnly" class="control-label"></label>
                <input asp-for="StartTimeOnly" class="form-control" />
                <span asp-validation-for="StartTimeOnly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTimeOnly" class="control-label"></label>
                <input asp-for="EndTimeOnly" class="form-control" />
                <span asp-validation-for="EndTimeOnly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
