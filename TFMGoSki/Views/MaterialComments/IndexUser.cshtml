@model IEnumerable<TFMGoSki.Dtos.MaterialCommentDto>

@{
    ViewData["Title"] = "Your Material Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your Material Comments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Material</th>
            <th>Comment</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReservationMaterialCartName</td>
                <td>@item.Text</td>
                <td>@item.Raiting / 5</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
